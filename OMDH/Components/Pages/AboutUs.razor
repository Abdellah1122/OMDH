        color: var(--primary-color);
        transition: color 0.3s ease;
    }

    .value-card h3 {
        font-size: 1.4rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
        font-family: var(--Poppins);
    }

    .value-card p {
        color: var(--text-medium);
        line-height: 1.6;
    }


