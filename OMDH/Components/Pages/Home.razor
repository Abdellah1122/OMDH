<style>
    :root {
        --primary-color: #1957a6;
        --primary-dark: #174c91;
        --secondary-color: #d3612f;
        --secondary-light: #b55227;
        --accent-color: #e8f0ed;
        --danger-color: #d84040;
        --danger-dark: #c53030;
        --gold-accent: #d4c197;
        --light-bg: #F5F5F5;
        --text-dark: #2c3e50;
        --text-medium: #546e7a;
        --text-light: white;
        --border-radius: 6px;
        --box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
        --Montsera: "Montserrat", sans-serif;
        --Poppins: "Poppins", sans-serif;
        --Roboto: "Roboto", sans-serif;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Montserrat", sans-serif;
        font-size: 0.99em;
        transition: var(--transition);
    }

    body {
        background-color: var(--light-bg);
        min-height: 100vh;
        overflow-x: hidden;
        color: var(--text-dark);
    }

    button {
        font-size: 0.95rem;
        font-weight: 500;
        padding: 0.5rem 1.8rem;
        border-radius: var(--border-radius);
        border: 1px solid transparent;
        cursor: pointer;
        transition: var(--transition);
        letter-spacing: 0.5px;
    }

    .BtnPrimary {
        background-color: var(--primary-color);
        color: white;
        border: 1px solid var(--primary-color);
        z-index: 77;
    }

        .BtnPrimary:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

    .BtnSuc {
        background-color: var(--secondary-color);
        color: white;
        border: 1px solid var(--secondary-color);
    }

        .BtnSuc:hover {
            background-color: var(--secondary-light);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

    .BtnDanger {
        background-color: var(--danger-color);
        color: white;
        border: 1px solid var(--danger-color);
    }

        .BtnDanger:hover {
            background-color: var(--danger-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

    .btnCar {
        background-color: #e8f0ed;
        width: 13em;
        font-size: 1.2em;
        color: #2c3e50;
    }

        .btnCar:hover {
            background-color: #d4c197;
        }

    .MainContainer {
        display: flex;
        flex-direction: column;
        gap: 3em;
    }

    .Void {
        width: 100vw;
        height: 100vh;
        z-index: -99;
    }

    /* Hero Carousel styles - Pure CSS */
    .intro {
        position: relative;
    }

    .intro-carousel {
        width: 100vw;
        height: 100vh;
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
        overflow: hidden;
    }

    .hero-carousel-track {
        display: flex;
        width: 400%; /* 4 slides * 100% */
        height: 100%;
        animation: heroSlide 20s infinite; /* 5s per slide */
    }

    @@keyframes heroSlide {
        0% {
            transform: translateX(0);
        }

        20% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-25%);
        }

        45% {
            transform: translateX(-25%);
        }

        50% {
            transform: translateX(-50%);
        }

        70% {
            transform: translateX(-50%);
        }

        75% {
            transform: translateX(-75%);
        }

        95% {
            transform: translateX(-75%);
        }

        100% {
            transform: translateX(0);
        }
    }

    .carousel-slide {
        width: 25%; /* Each slide takes 25% of the track */
        height: 100%;
        flex-shrink: 0;
    }

    .carousel-content-container {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .carousel-overlay {
        position: absolute;
        bottom: 10%;
        left: 50%;
        transform: translateX(-50%);
        text-align: center;
        z-index: 10;
        pointer-events: auto;
        width: 76%;
        z-index: 99999;
        padding: 1em 2em;
    }

        .carousel-overlay p {
            margin-bottom: 15px;
            font-size: 1.5rem;
            font-weight: 500;
            color: white;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
        }

    .img-overlay {
        width: 100%;
        height: 100%;
        pointer-events: none;
        position: relative;
    }

        .img-overlay img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .Sec {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 1em;
        gap: 1.5em;
    }

    h2::after {
        content: "";
        display: block;
        width: 2em;
        height: 3px;
        background-color: var(--secondary-color);
        margin: 5px auto 0;
    }

    /* News Carousel - Pure CSS */
    .newss {
        padding: 2em 1em;
    }

    .news-carousel-container {
        width: 100%;
        margin: 0 auto;
    }

    .news-carousel {
        width: 100%;
        height: 600px;
        box-shadow: var(--box-shadow);
        border-radius: var(--border-radius);
        overflow: hidden;
    }

    .news-carousel-track {
        display: flex;
        width: 300%; /* 3 slides * 100% */
        height: 100%;
        animation: newsSlide 21s infinite; /* 7s per slide */
    }

    @@keyframes newsSlide {
        0% {
            transform: translateX(0);
        }

        30% {
            transform: translateX(0);
        }

        33.33% {
            transform: translateX(-33.33%);
        }

        63.33% {
            transform: translateX(-33.33%);
        }

        66.66% {
            transform: translateX(-66.66%);
        }

        96.66% {
            transform: translateX(-66.66%);
        }

        100% {
            transform: translateX(0);
        }
    }

    .news-slide {
        width: 33.33%; /* Each slide takes 33.33% of the track */
        height: 100%;
        flex-shrink: 0;
    }

    .news-item {
        display: flex;
        flex-direction: row;
        height: 100%;
        background-color: white;
        border-radius: var(--border-radius);
        overflow: hidden;
    }

    .news-image {
        width: 50%;
        height: 100%;
        position: relative;
        overflow: hidden;
    }

        .news-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .news-item:hover .news-image img {
        transform: scale(1.05);
    }

    .news-text {
        width: 50%;
        padding: 3em;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 1.5rem;
    }

        .news-text h2 {
            color: var(--primary-color);
            font-size: 1.8rem;
            text-align: left;
            font-family: var(--Poppins);
            position: relative;
            padding-bottom: 0.5em;
        }

            .news-text h2::after {
                content: "";
                display: block;
                width: 3em;
                height: 3px;
                background-color: var(--secondary-color);
                margin: 10px 0 0;
            }

        .news-text p {
            line-height: 1.7;
            color: var(--text-medium);
            text-align: left;
            font-size: 1.1em;
        }

    .news-date {
        font-size: 0.9em;
        color: var(--text-medium);
        font-style: italic;
        margin-bottom: -1em;
    }

    /* Partner Sliders */
    .slider, .slider2, .slider3 {
        width: 90%;
        overflow: hidden;
        white-space: nowrap;
        position: relative;
        background-color: var(--accent-color);
        padding: 1em;
        height: 11em;
        display: flex;
        align-items: center;
    }

    .slide-track, .slide-track2, .slide-track3 {
        display: flex;
        animation: scroll 40s linear infinite;
        gap: 1em;
        animation-play-state: running;
    }

    @@keyframes scroll {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-50%);
        }
    }

    .slide, .slide2, .slide3 {
        flex-shrink: 0;
        width: 18em;
        height: 10em;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .slide img, .slide2 img, .slide3 img {
            display: block;
            max-width: 100%;
            max-height: 100%;
            height: 10em;
            width: auto;
            object-fit: contain;
        }

    /* Our Story Section */
    .OurStory {
        display: flex;
        flex-direction: row;
        gap: 5em;
        margin-top: 2em;
        padding: 0em 1em 0em 0em;
        background-color: var(--accent-color);
        align-items: center;
    }

    .image-about img {
        width: 45vw;
        min-height: 400px;
        height: auto;
        border-radius: 3px;
        object-fit: cover;
    }

    .aboutt {
        display: flex;
        flex-direction: column;
        margin-top: 5em;
        gap: 2em;
    }

    .about-p {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 2em;
    }

    /* Timeline Section */
    .timeline-section {
        width: 100%;
    }

    .Projects {
        background: var(--accent-color);
        width: 100%;
        max-width: 1300px;
        padding: 2em;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 2em;
        margin: 0 auto;
    }

    .custom-timeline {
        position: relative;
        padding: 2em 0;
        width: 100%;
    }

        .custom-timeline::before {
            content: '';
            position: absolute;
            left: 50%;
            top: 0;
            bottom: 0;
            width: 2px;
            background-color: var(--primary-color);
            transform: translateX(-50%);
        }

    .timeline-item {
        position: relative;
        margin-bottom: 3em;
        width: 100%;
    }

        .timeline-item:nth-child(odd) .timeline-content {
            margin-left: 0;
            margin-right: 55%;
            text-align: right;
        }

        .timeline-item:nth-child(even) .timeline-content {
            margin-left: 55%;
            margin-right: 0;
            text-align: left;
        }

    .timeline-content {
        background-color: white;
        padding: 1.5em;
        border-radius: var(--border-radius);
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
        transition: var(--transition);
        position: relative;
    }

        .timeline-content:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    .timeline-dot {
        position: absolute;
        left: 50%;
        top: 1.5em;
        width: 16px;
        height: 16px;
        background-color: var(--primary-color);
        border-radius: 50%;
        transform: translateX(-50%);
        box-shadow: 0 0 0 4px rgba(25, 87, 166, 0.2);
        z-index: 2;
    }

    .timeline-year {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 0.5em;
    }

        .timeline-year.primary {
            color: var(--primary-color);
        }

        .timeline-year.secondary {
            color: var(--secondary-color);
        }

    .timeline-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.5em;
    }

        .timeline-title.primary {
            color: var(--primary-color);
        }

        .timeline-title.secondary {
            color: var(--secondary-color);
        }

    .timeline-description {
        color: var(--text-dark);
        line-height: 1.6;
        margin-bottom: 1em;
    }

    .Projects img {
        width: 100%;
        max-width: 20em;
        margin-top: 1em;
        border-radius: var(--border-radius);
        height: auto;
    }

    /* Map Section */
    .finddd {
        padding: 1em 0 0 0;
    }

    .map-container {
        width: 92vw;
        height: 80vh;
    }

        .map-container iframe {
            width: 100%;
            height: 600px;
            border: none;
        }

    /* Animations */
    .autoShow {
        animation: autoShowAnimation both;
        animation-timeline: view(90% 5%);
    }

    @@keyframes autoShowAnimation {
        from {
            opacity: 0;
            transform: translateY(200px) scale(0.3);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    /* Pause animations on hover for better UX */
    .hero-carousel-track:hover,
    .news-carousel-track:hover {
        animation-play-state: paused;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        body {
            font-size: 15px;
            line-height: 1.6;
        }

        .MainContainer {
            gap: 2em;
        }

        .Sec {
            padding: 2em 1em;
            gap: 1.5em;
        }

        h1, .h1 {
            font-size: 2rem;
        }

        h2, .h2 {
            font-size: 1.75rem;
        }

        h3, .h3 {
            font-size: 1.4rem;
        }

        p {
            font-size: 0.95rem;
        }

        h2::after {
            margin: 0.4em auto 0;
            width: 2.5em;
            height: 3px;
        }

        .news-text h2::after {
            margin: 0.4em 0 0;
        }

        button, .BtnPrimary, .BtnSuc, .BtnDanger, .btnCar {
            padding: 0.7em 1.3em;
            font-size: 0.9rem;
            letter-spacing: 0.3px;
        }

        .carousel-overlay {
            width: 90%;
            bottom: 8%;
            padding: 1em;
            background-color: rgba(0, 0, 0, 0.3);
            border-radius: var(--border-radius);
        }

            .carousel-overlay p {
                font-size: 0.95rem;
                margin-bottom: 0.8em;
                color: white;
            }

        .btnCar {
            font-size: 0.9rem;
        }

        .OurStory {
            flex-direction: column;
            gap: 1.5em;
            padding: 1.5em;
            margin-top: 1.5em;
        }

        .image-about img {
            width: 100%;
            min-height: unset;
            height: auto;
            max-height: 300px;
            object-fit: cover;
            border-radius: var(--border-radius);
        }

        .aboutt {
            margin-top: 0;
            gap: 1em;
            text-align: center;
            align-items: center;
        }

        .about-p {
            gap: 1em;
            align-items: center;
        }

            .about-p .BtnPrimary {
                width: auto;
                max-width: 280px;
            }

        .news-item {
            flex-direction: column;
            height: auto;
        }

        .news-image {
            width: 100%;
            order: 1;
            padding: 0 !important;
            height: auto;
            line-height: 0;
        }

            .news-image img {
                width: 100%;
                height: auto;
                display: block;
                max-height: 350px;
                object-fit: cover;
                border-top-left-radius: var(--border-radius);
                border-top-right-radius: var(--border-radius);
            }

        .news-text {
            width: 100%;
            order: 2;
            padding: 1.5em;
            gap: 0.8em;
        }

        .news-date {
            font-size: 0.8rem;
            margin-bottom: 0;
        }

        .news-text h2 {
            font-size: 1.3rem;
            line-height: 1.3;
        }

        .news-text p {
            font-size: 0.9rem;
            line-height: 1.5;
        }

        .custom-timeline::before {
            left: 20px;
        }

        .timeline-item:nth-child(odd) .timeline-content,
        .timeline-item:nth-child(even) .timeline-content {
            margin-left: 50px;
            margin-right: 0;
            text-align: left;
        }

        .timeline-dot {
            left: 20px;
        }

        .Projects {
            padding: 0;
            width: 100%;
        }

            .Projects img {
                width: 100%;
                max-width: 300px;
                height: auto;
                margin-top: 0.5em;
                border-radius: var(--border-radius);
            }

        .map-container {
            width: 100%;
            height: 50vh;
        }

        .slider .slide img, .slider2 .slide2 img, .slider3 .slide3 img {
            max-width: 120px;
            height: 60px;
            object-fit: contain;
            margin: 0 15px;
        }

        .slider, .slider2, .slider3 {
            height: 80px;
            margin-bottom: 1em;
        }
    }

    @@media (max-width: 480px) {
        body {
            font-size: 14px;
        }

        .Sec {
            padding: 1.5em 0.8em;
        }

        h1, .h1 {
            font-size: 1.8rem;
        }

        h2, .h2 {
            font-size: 1.5rem;
        }

        h3, .h3 {
            font-size: 1.25rem;
        }

        p {
            font-size: 0.9rem;
        }

        button, .BtnPrimary, .BtnSuc, .BtnDanger, .btnCar {
            padding: 0.6em 1em;
            font-size: 0.85rem;
        }

        .carousel-overlay p {
            font-size: 0.9rem;
            line-height: 1.4;
        }

        .carousel-overlay {
            bottom: 5%;
        }

        .image-about img {
            max-height: 250px;
        }

        .aboutt {
            text-align: left;
        }

        .about-p {
            align-items: flex-start;
        }

            .about-p .BtnPrimary {
                align-self: flex-start;
            }

        .slider .slide img, .slider2 .slide2 img, .slider3 .slide3 img {
            max-width: 90px;
            height: 50px;
            margin: 0 10px;
        }

        .slider, .slider2, .slider3 {
            height: 70px;
        }

        .news-image img {
            max-height: 280px;
        }

        .news-text {
            padding: 1em;
        }

            .news-text h2 {
                font-size: 1.15rem;
            }

            .news-text p {
                font-size: 0.85rem;
            }

        .Projects img {
            max-width: 260px;
        }

        .map-container {
            height: 45vh;
        }
    }
 

</style>
