<style>
    :root {
        --primary-color: #1957a6;
        --primary-dark: #174c91;
        --secondary-color: #d3612f;
        --secondary-light: #b55227;
        --accent-color: #e8f0ed;
        --danger-color: #d84040;
        --danger-dark: #c53030;
        --gold-accent: #d4c197;
        --light-bg: #F5F5F5;
        --text-dark: #2c3e50;
        --text-medium: #546e7a;
        --text-light: white;
        --border-radius: 6px;
        --box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
        --Montsera: "Montserrat", sans-serif;
        --Poppins: "Poppins", sans-serif;
        --Roboto: "Roboto", sans-serif;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Montserrat", sans-serif;
        font-size: 0.99em;
        transition: var(--transition);
    }

    body {
        background-color: var(--light-bg);
        min-height: 100vh;
        overflow-x: hidden;
        color: var(--text-dark);
    }

    button {
        font-size: 0.95rem;
        font-weight: 500;
        padding: 0.5rem 1.8rem;
        border-radius: var(--border-radius);
        border: 1px solid transparent;
        cursor: pointer;
        transition: var(--transition);
        letter-spacing: 0.5px;
    }

    .BtnPrimary {
        background-color: var(--primary-color);
        color: white;
        border: 1px solid var(--primary-color);
        z-index: 77;
    }

        .BtnPrimary:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

    .BtnSuc {
        background-color: var(--secondary-color);
        color: white;
        border: 1px solid var(--secondary-color);
    }

        .BtnSuc:hover {
            background-color: var(--secondary-light);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

    .BtnDanger {
        background-color: var(--danger-color);
        color: white;
        border: 1px solid var(--danger-color);
    }

        .BtnDanger:hover {
            background-color: var(--danger-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

    .MainContainer {
        display: flex;
        flex-direction: column;
        gap: 3em;
    }

    .Void {
        width: 100vw;
        height: 100vh;
        z-index: -99;
    }

    /* Carousel styles */
    .intro-carousel {
        width: 100vw;
        height: 100vh;
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
    }

    .mud-carousel {
        width: 100% !important;
        height: 100% !important;
    }

    .carousel-content-container {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .carousel-overlay {
        position: absolute;
        bottom: 10%;
        left: 50%;
        transform: translateX(-50%);
        text-align: center;
        z-index: 10;
        pointer-events: auto;
        width: 76%;
        z-index: 99999;
        padding: 1em 2em;
    }

        .carousel-overlay p {
            margin-bottom: 15px;
            font-size: 1.5rem;
            font-weight: 500;
            color: white;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
        }

    .img-overlay {
        width: 100%;
        height: 100%;
        pointer-events: none;
        position: relative;
    }



        .img-overlay img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .btnCar {
        background-color: #e8f0ed;
        width: 13em;
        font-size: 1.2em;
        color: #2c3e50;
    }

        .btnCar:hover {
            background-color: #d4c197;
        }

    .Sec {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 1em;
        gap: 1.5em;
    }

    h2::after {
        content: "";
        display: block;
        width: 2em;
        height: 3px; /* Adjust thickness if needed */
        background-color: var(--secondary-color);
        margin: 5px auto 0;
    }

    .OurStory {
        display: flex;
        flex-direction: row;
        gap: 5em;
        margin-top: 2em;
        padding: 0em 1em 0em 0em;
        background-color: var(--accent-color);
    }

    .image-about img {
        width: 45vw;
        min-height: 400px;
        height: auto;
        border-radius: 3px;
        object-fit: cover;
    }

    .aboutt {
        display: flex;
        flex-direction: column;
        margin-top: 5em;
        gap: 2em;
    }

    .about-p {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 2em;
    }

    .Missionss {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        width: 90%;
        padding: 2em;
        gap: 1em;
    }

    .MissionsLeft, .MissionsRight {
        width: 50%;
        padding: 0.5em;
        display: flex;
        flex-direction: column;
        gap: 4em;
    }

    .MissionsRight {
        margin-top: 4em;
    }

    .Mission {
        background-color: var(--accent-color);
        padding: 1em;
        border-radius: var(--border-radius);
        display: flex;
        flex-direction: column;
        gap: 0.5em;
    }

    .Team {
        padding: 2em;
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        gap: 2em;
    }

    .Member {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        gap: 1em;
    }

        .Member img {
            width: 15em; /* Set the fixed width */
            height: 15em; /* Set the fixed height */
            border-radius: 50%; /* Makes it a perfect circle */
            object-fit: cover; /* Ensures the image is properly cropped */
            display: block;
            margin: 0 auto;
            border: 3px solid var(--secondary-color); /* Optional: adds a subtle border */
        }

    .autoShow {
        animation: autoShowAnimation both;
        animation-timeline: view(90% 5%);
    }

    .MainPartners {
        width: 100%;
        height: 12em;
        padding: 1em;
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: center;
        box-shadow: var(--box-shadow);
    }

        .MainPartners img {
            width: 10em;
            height: 10em;
            box-shadow: var(--box-shadow);
        }

    .AllPartners {
        display: flex;
        flex-direction: row;
        box-shadow: var(--box-shadow);
        border-radius: var(--border-radius);
        width: 100%;
        padding: 1em 4em;
        justify-content: space-between;
        align-items: center;
    }

        .AllPartners h3 {
            color: var(--secondary-color);
        }

    .image-partners {
        width: 50%;
        border-radius: var(--border-radius);
        height: 100%;
        padding: 1em;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 3em;
        justify-content: center;
        align-items: center;
    }

        .image-partners img {
            width: 10em;
            height: 8em;
            box-shadow: var(--box-shadow);
            border-radius: 5px;
        }

            .image-partners img:hover, .MainPartners img:hover {
                transform: scale(1.02);
                cursor: pointer;
            }

    .title {
        width: 40%;
        padding: 1em;
        gap: 1em;
        display: flex;
        flex-direction: column;
    }



    .news-carousel {
        width: 100% !important;
        height: 800px !important;
        box-shadow: var(--box-shadow);
        border-radius: var(--border-radius);
