@page "/Presence"
@layout PagesLayout
@inject NavigationManager NavigationManager
<style>
    :root {
        --primary-color: #1957a6;
        --primary-dark: #174c91;
        --secondary-color: #d3612f;
        --secondary-light: #b55227;
        --accent-color: #e8f0ed;
        --danger-color: #d84040;
        --danger-dark: #c53030;
        --gold-accent: #d4c197;
        --light-bg: #F5F5F5;
        --text-dark: #2c3e50;
        --text-medium: #546e7a;
        --text-light: white;
        --border-radius: 6px;
        --box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
        --Montsera: "Montserrat", sans-serif;
        --Poppins: "Poppins", sans-serif;
    }

    body {
        background-color: var(--light-bg);
        min-height: 100vh;
        overflow-x: hidden;
        color: var(--text-dark);
    }

    button {
        font-size: 0.95rem;
        font-weight: 500;
        padding: 0.5rem 1.8rem;
        border-radius: var(--border-radius);
        border: 1px solid transparent;
        cursor: pointer;
        transition: var(--transition);
        letter-spacing: 0.5px;
    }

    .BtnPrimary {
        background-color: var(--primary-color);
        color: white;
        border: 1px solid var(--primary-color);
    }

        .BtnPrimary:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

    .BtnSuc {
        background-color: var(--secondary-color);
        color: white;
        border: 1px solid var(--secondary-color);
    }

        .BtnSuc:hover {
            background-color: var(--secondary-light);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

    /* Global Presence Page Styles */
    .presence-section {
        padding: 5rem 2rem;
        background-color: var(--light-bg);
    }

    .presence-container {
        max-width: 1400px;
        margin: 0 auto;
    }

    .presence-header {
        text-align: center;
        margin-bottom: 3rem;
        position: relative;
    }

        .presence-header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 1rem;
            position: relative;
            display: inline-block;
        }

            .presence-header h1::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 4px;
                background-color: var(--secondary-color);
                border-radius: 2px;
            }

    .highlight {
        color: var(--primary-color);
    }

    .presence-tagline {
        font-size: 1.2rem;
        color: var(--text-medium);
        max-width: 800px;
        margin: 2rem auto;
        line-height: 1.6;
        font-family: var(--Poppins);
    }

    /* World Map Section */
    .world-map-section {
        margin-bottom: 5rem;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .world-map-container {
        position: relative;
        width: 100%;
        height: 40em;
        background-color: white;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        overflow: hidden;
    }

    .world-map {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .map-legend {
        position: absolute;
        bottom: 20px;
        right: 20px;
        background-color: white;
        padding: 1rem;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        z-index: 2;
    }

    .legend-item {
        display: flex;
        align-items: center;
        margin-bottom: 0.5rem;
    }

        .legend-item:last-child {
            margin-bottom: 0;
        }

    .legend-color {
        width: 15px;
        height: 15px;
        border-radius: 50%;
        margin-right: 0.5rem;
    }

        .legend-color.hq {
            background-color: var(--secondary-color);
        }

        .legend-color.office {
            background-color: var(--primary-color);
        }

    .legend-text {
        font-size: 0.8rem;
        color: var(--text-medium);
    }

    .global-stats {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        margin: 3rem 0;
    }

    .stat-card {
        flex: 1;
        min-width: 200px;
        background-color: white;
        padding: 2rem;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
        }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-family: var(--Poppins);
    }

    .stat-label {
        color: var(--text-medium);
        font-size: 1rem;
        font-weight: 500;
    }

    .regional-presence {
        margin: 5rem 0;
    }

    .timeline-header {
        text-align: center;
        margin-bottom: 3rem;
    }

        .timeline-header h2 {
            font-size: 2rem;
            color: var(--text-dark);
            margin-bottom: 1rem;
            font-family: var(--Poppins);
            position: relative;
            display: inline-block;
            padding-bottom: 0.5rem;
        }

            .timeline-header h2::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 60px;
                height: 3px;
                background-color: var(--secondary-color);
                border-radius: 1.5px;
            }

    .timeline-description {
        max-width: 800px;
        margin: 0 auto;
        color: var(--text-medium);
        line-height: 1.7;
        text-align: center;
    }

    .region-content.active {
        display: block;
    }

    .office-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
    }

    .office-card {
        background-color: white;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .office-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
        }

    .office-image {
        height: 200px;
        overflow: hidden;
    }

        .office-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .office-card:hover .office-image img {
        transform: scale(1.05);
    }

    .office-info {
        padding: 1.5rem;
    }

    .office-type {
        display: inline-block;
        background-color: var(--accent-color);
        color: var(--primary-color);
        padding: 0.3rem 0.8rem;
        border-radius: 4px;
        font-size: 0.8rem;
        font-weight: 600;
        margin-bottom: 0.8rem;
    }

        .office-type.hq {
            background-color: var(--gold-accent);
            color: var(--text-dark);
        }

    .office-info h3 {
        color: var(--primary-color);
        margin-bottom: 0.8rem;
        font-family: var(--Poppins);
    }

    .office-info p {
        color: var(--text-medium);
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    .office-contact {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--accent-color);
    }

    .contact-item {
        display: flex;
        align-items: center;
        margin-bottom: 0.5rem;
        color: var(--text-medium);
        font-size: 0.9rem;
    }

        .contact-item:last-child {
            margin-bottom: 0;
        }

        .contact-item::before {
            margin-right: 0.5rem;
            font-size: 1rem;
        }

        .contact-item.phone::before {
            content: '📞';
        }

        .contact-item.email::before {
            content: '✉️';
        }

        .contact-item.address::before {
            content: '📍';
        }

    .future-expansion {
        margin: 5rem 0;
        background-color: white;
        padding: 3rem;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        text-align: center;
    }

        .future-expansion h2 {
            font-size: 2rem;
            color: var(--text-dark);
            margin-bottom: 1rem;
            font-family: var(--Poppins);
        }

        .future-expansion p {
            color: var(--text-medium);
            line-height: 1.7;
            max-width: 800px;
            margin: 0 auto 2rem;
        }

    .expansion-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
    }

    .expansion-card {
        background-color: var(--light-bg);
        border-radius: var(--border-radius);
        padding: 2rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .expansion-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--box-shadow);
        }

    .expansion-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .expansion-card h3 {
        color: var(--primary-color);
        margin-bottom: 1rem;
        font-family: var(--Poppins);
    }

    .expansion-card p {
        color: var(--text-medium);
        line-height: 1.6;
        font-size: 0.95rem;
        margin-bottom: 0;
    }

    .cta-section {
        margin-top: 5rem;
        text-align: center;
    }

    .cta-container {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 2rem;
    }
    @@keyframes pulse {
    0% {
        box-shadow: 0 0 0 0 rgba(25, 87, 166, 0.4);
    }

    70% {
        box-shadow: 0 0 0 10px rgba(25, 87, 166, 0);
    }

    100% {
        box-shadow: 0 0 0 0 rgba(25, 87, 166, 0);
    }
}
/* Responsive adjustments */
@@media (max-width: 992px) {
    .timeline-line {
        left: 30px;
    }

    .timeline-dot {
        left: 30px;
    }

    .timeline-card {
        width: calc(100% - 60px);
        margin-left: 60px !important;
    }

    .timeline-item:nth-child(odd) .timeline-card::before,
    .timeline-item:nth-child(even) .timeline-card::before {
        left: -10px;
        right: auto;
    }

    .world-map-container {
        height: 400px;
    }
}

@@media (max-width: 768px) {
    .presence-section {
        padding: 3rem 1.5rem;
    }

    .presence-header h1 {
        font-size: 2rem;
    }

    .presence-tagline {
        font-size: 1rem;
    }

    .timeline-header h2,
    .future-expansion h2 {
        font-size: 1.8rem;
    }

    .stat-card {
        min-width: 100%;
    }

    .world-map-container {
        height: 300px;
    }

    .cta-container {
        flex-direction: column;
    }

    .timeline-tabs,
    .region-tabs {
        flex-direction: column;
        align-items: center;
    }

    .timeline-tab,
    .region-tab {
        width: 100%;
        text-align: center;
    }
}

@@media (max-width: 576px) {
    .presence-section {
        padding: 2rem 1rem;
    }

    .presence-header h1 {
        font-size: 1.8rem;
    }

    .timeline-card {
        padding: 1rem;
    }

    .timeline-image {
        height: 150px;
    }

    .world-map-container {
        height: 250px;
    }

    .office-grid {
        grid-template-columns: 1fr;
    }

    .expansion-grid {
        grid-template-columns: 1fr;
    }
}

